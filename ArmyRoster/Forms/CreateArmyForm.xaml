<Window x:Class="ArmyRoster.Forms.CreateArmyForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArmyRoster.Forms"
        mc:Ignorable="d"
        Title="CreateArmyForm" Height="450" Width="800">
    <Grid>
        <Image Source="../Resource/CreateArmy.png" HorizontalAlignment="Stretch" Stretch="UniformToFill"/>
        <StackPanel>
            <TextBlock Text="Введите название армии" FontSize="35" Margin="20" FontFamily="Monotype Corsiva" FontWeight="ExtraBlack" HorizontalAlignment="Center" />
            <TextBox VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="10" FontSize="40" FontFamily="Monotype Corsiva" Height="70" Background="Transparent" Width="500"/>
            <Button Content="Создать армию"  Margin="50" FontSize="30" FontFamily="Monotype Corsiva" FontWeight="ExtraBlack" Background="SkyBlue" Width="300"/>
        </StackPanel>
    </Grid>
</Window>
