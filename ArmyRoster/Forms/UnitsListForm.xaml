<Window x:Class="ArmyRoster.Forms.UnitsListForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArmyRoster.Forms"
        mc:Ignorable="d"
        Title="UnitsListForm" Height="700" Width="1200">
    <Grid>
        <Image Source="../Resource/Uhlanor.png"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="119*"/>
                <ColumnDefinition Width="31*"/>
            </Grid.ColumnDefinitions>
            <StackPanel x:Name="stackPanel1">
                
            </StackPanel>

            <StackPanel Grid.Column="1">
                <TextBox x:Name="unitNameTextBox" Height="40" FontSize="30" Background="Transparent"  />
                <Button x:Name="addUnitButton" Height="40" Content="Добавить юнит" FontSize="30" Click="addUnitButton_Click" />
            </StackPanel>

        </Grid>

    </Grid>
</Window>
